<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_restaurant_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hit_product_image_view"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="16dp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/hit_product_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hit_product_image_view"
            app:layout_constraintTop_toTopOf="@id/hit_product_image_view"
            tools:text="Насыщенный ролл" />

        <TextView
            android:id="@+id/hit_product_description_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hit_product_image_view"
            app:layout_constraintTop_toBottomOf="@id/hit_product_name_text_view"
            tools:text="Состав: Лосось, огурец, сливочный сыр. Вес: 240 гр." />

        <ImageView
            android:id="@+id/hit_restaurant_logo_image_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@id/hit_product_image_view"
            app:layout_constraintTop_toBottomOf="@+id/hit_product_description_text_view"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/hit_restaurant_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/orange_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/hit_restaurant_logo_image_view"
            app:layout_constraintStart_toEndOf="@id/hit_restaurant_logo_image_view"
            app:layout_constraintTop_toTopOf="@id/hit_restaurant_logo_image_view"
            tools:text="Красный дракон" />

        <TextView
            android:id="@+id/hit_price_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hit_product_image_view"
            app:layout_constraintTop_toBottomOf="@id/hit_restaurant_name_text_view"
            tools:text="269Р" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>